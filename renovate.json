{
  "extends": [
    "config:base", ":dependencyDashboard"
  ],
  "constraints": {
    "python": "3.8"
  },
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
  "pip-compile": {
    "enabled": true,
    "fileMatch": ["(^|/)requirements\\.in$"]
  },
  "labels": ["dependencies", "renovate-bot"],
  "python":{
    "addLabels": ["lang: python"]
  },
  "packageRules": [
    {
      "matchDepTypes": ["devDependencies", "dev-dependencies"],
      "matchPackagePatterns": ["mypy", "black","isort","pre-commit","flake8","pygments","pytest","pytest-cov","pytest-randomly","pyfakefs","pep8-naming"],
      "automerge": true
    }
  ],
  "pre-commit": {
    "enabled": true
  },
  "major": {
    "automerge": false
  },
  "automergeType": "pr",
  "automergeStrategy": "squash"
}
